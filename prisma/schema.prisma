generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Post {
    id          String    @id @default(cuid())
    title       String
    img         String
    description String
    like        Int
    author      Author    @relation(fields: [authorId], references: [id])
    authorId    String
    tags        String[]
    imageUrl    String?
    excerpt     String?
    slug        String    @unique
    comment     Comment[]
}

model Author {
    id         String  @id @default(cuid())
    name       String
    profileUrl String?
    posts      Post[]
}

model User {
    id        String   @id @default(cuid())
    name      String?
    email     String?  @unique
    password  String?
    Author    String?
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")

    @@map("users")
}

model Comment {
    id        String   @id @default(cuid())
    name      String
    createdAt DateTime @default(now()) @map("created_at")
    updatedAt DateTime @updatedAt @map("updated_at")
    postId    String
    post      Post     @relation(fields: [postId], references: [id])
}
